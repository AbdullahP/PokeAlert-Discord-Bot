# ULTIMATE MONITORING SYSTEM - ENVIRONMENT CONFIGURATION
# Copy this to .env and fill in your values

# Discord Bot Token (REQUIRED)
DISCORD_TOKEN=your_discord_bot_token_here

# Monitoring Settings
MONITORING_INTERVAL=1.0
MAX_CONCURRENT_REQUESTS=20
ENABLE_INTELLIGENT_MONITORING=true

# Notification Settings  
NOTIFY_ON_IN_STOCK=true
NOTIFY_ON_OUT_OF_STOCK=false
DEFAULT_ROLE_MENTION=@everyone
NOTIFICATION_COOLDOWN=300

# Performance Settings
CACHE_DURATION=60
CONNECTION_POOL_SIZE=50
REQUEST_TIMEOUT=30

# Anti-Detection Settings
USE_RANDOM_DELAYS=true
ROTATE_USER_AGENTS=true
ENABLE_CIRCUIT_BREAKER=true

# Database Settings
DATABASE_PATH=data/pokemon_bot.db
ENABLE_DATABASE_BACKUP=true

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/production.log
